<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@color/White">

    <Space
        android:layout_width="match_parent"
        android:layout_height="77dp" />

    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/success" />

    <TextView
        android:id="@+id/warningText_loginerror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="추천인 등록 완료"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/warningText_loginerror2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="스코인이 추가 지급됩니다"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/closeButton_loginwerror"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/mybuttonblue"
        android:layout_gravity="center"
        android:onClick="mOnClose"
        android:text="닫기"
        android:textColor="#FAFAFA"
        android:textSize="18sp"
        android:typeface="sans" />
</LinearLayout>