<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@color/White">

    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/success" />

    <TextView
        android:id="@+id/warningText_loginerror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="구매 완료하였습니다"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textrest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="잔액"
            android:textColor="@color/Black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textskkoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,700스코인"
            android:textColor="#979797"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/closeButton_loginwerror"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/mybuttonblue"
        android:layout_gravity="center"
        android:onClick="mOnClose"
        android:text="닫기"
        android:textColor="#FAFAFA"
        android:textSize="18sp"
        android:typeface="sans" />
</LinearLayout>