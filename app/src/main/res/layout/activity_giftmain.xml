<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/giftmaintop"
        layout="@layout/top1_bar"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cutlery"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/cutlery" />

        <ImageView
            android:id="@+id/coffee_cup"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/coffee_cup" />

        <ImageView
            android:id="@+id/chef_hat"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/chef_hat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textfood"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="음식"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textdrink"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="음료"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textuse"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="학내시설"
            android:textColor="@color/Black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="이름"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="종류"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="브랜드"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="가격"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="수량"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/gift_listview"
        android:layout_width="match_parent"
        android:layout_height="349dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="1" />

    <include
        android:id="@+id/giftmainbot"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0" />

</LinearLayout>